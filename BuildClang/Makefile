# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := googlemock googlemock-main cppspec cppspec-test

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

googlemock: 
	@echo "==== Building googlemock ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f googlemock.make

googlemock-main: 
	@echo "==== Building googlemock-main ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f googlemock-main.make

cppspec: 
	@echo "==== Building cppspec ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f cppspec.make

cppspec-test: cppspec googlemock
	@echo "==== Building cppspec-test ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f cppspec-test.make

clean:
	@${MAKE} --no-print-directory -C . -f googlemock.make clean
	@${MAKE} --no-print-directory -C . -f googlemock-main.make clean
	@${MAKE} --no-print-directory -C . -f cppspec.make clean
	@${MAKE} --no-print-directory -C . -f cppspec-test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   googlemock"
	@echo "   googlemock-main"
	@echo "   cppspec"
	@echo "   cppspec-test"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
